<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route method="GET" url="/V1/productcomment/:id">
        <service class="Certification\ProductComment\Api\ProductCommentRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Certification_ProductComment::webservice"/>
        </resources>
    </route>
    <route method="GET" url="/V1/productcomment">
        <service class="Certification\ProductComment\Api\ProductCommentRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Certification_ProductComment::webservice"/>
        </resources>
    </route>
</routes>
