<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>
            First Page
        </title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Certification\SampleWebFlow\Block\FirstPage" template="Certification_SampleWebFlow::firstpage.phtml">
                <arguments>
                    <argument name="url" xsi:type="url" path="webflow/nextpage" />
                    <argument name="message" xsi:type="string">Custom string</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>